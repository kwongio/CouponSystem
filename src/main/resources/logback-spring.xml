    <!-- 루트 로거 설정: 로그 레벨 및 출력 대상 -->
    <root level="INFO">
        <!-- 콘솔 출력 -->
        <appender-ref ref="STDOUT" />
        <!-- 파일 출력 -->
        <appender-ref ref="FILE" />
        <!-- Logstash 로그 전송 (ELK 설정 시 주석 해제) -->
        <!-- <appender-ref ref="STASH" /> -->
    </root>
</configuration>
